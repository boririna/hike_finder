<div class="cards m-4">
    <% @my_likes.each do |like| %>
      <div class="card-trip">

        <%= link_to like_path(like), method: :delete do %>
          <i class="fas fa-heart fa-heart-red image-icon"></i>
        <% end %>

        <% if like.hike.photos.any? %>
          <%= cl_image_tag like.hike.photos[0].key, alt: "Card image cap", transformation: { effect: "art:sonnet"} %>
        <%end%>
        <%= link_to hike_path(like.hike), class:"text-decoration-none link" do %>
          <div class="card-trip-infos">
            <div class="card-trip-title">
              <h2  class="text-hidden"><%= like.hike.name %></h2>
              <p class="text-hidden"><%= like.hike.description %></p>
            </div>
            <div>
              <p class="card-text">Difficulty level: <%= like.hike.difficulty_level %></p>
              <p class="card-text">Distance: <%= like.hike.length %> km</p>
              <p>Hiking time: <%= like.hike.hiking_time %></p>
              <%= "â­" * Review.average_rating(like) %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
