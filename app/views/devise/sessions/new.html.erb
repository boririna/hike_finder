<div class="background-heigth">
  <div class="our-container-form">
    <div class="row">
      <div class="col-sm-6 col-md-6 col-lg-6 p-4 bg-white rounded my-3">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%= f.button :submit, "Log in", class:"our-button" %>
        <% end %>

        <div class="mb-3 mt-3">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class:"link" %><br />
          <% end %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:"link" %><br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
