<div class="our-container text-start my-4">

<h3 class="my-2"> Edit this hike</h3>
          <%= simple_form_for [ @hike ] do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :difficulty_level %>
            <%= f.input :length %>
            <%= f.input :hiking_time %>
            <%= f.input :ascent %>
            <%= f.input :descent %>
            <%= f.input :services %>
            <%= f.input :latitude %>
            <%= f.input :longitude %>
            <%= f.input :dog_friendly, as: :boolean, checked_value: true, unchecked_value: false %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.submit "Save changes", class: "btn our-button" %>
          <% end %>
        <div class="my-3">
          <%= link_to "Back to all hikes", hikes_path, class: "btn our-button" %>
        </div>
</div>
