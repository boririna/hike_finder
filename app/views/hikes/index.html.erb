<div class="cards m-4">
  <% @hikes.each do |hike| %>
    <div class="card-trip">
      <%= image_tag "rigi_panoramaweg.jpg", alt: "Card image cap"%>
      <div class="card-trip-infos">
        <div>
          <h2><%= hike.name %></h2>
          <p><%= hike.description %></p>
          <p class="card-text">Difficulty level: <%= hike.difficulty_level %></p>
          <p class="card-text">Distance: <%= hike.length %> km</p>
        </div>
        <p class="card-trip-pricing">Ascent: <%= hike.ascent %> m</p>
        <p class="card-trip-pricing">Descent: <%= hike.descent %> m</p>
      </div>
    </div>
  <% end %>
</div>
